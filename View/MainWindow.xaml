<Window x:Class="WpfChat.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfChat.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="500" Background="Gray">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <ContentControl Grid.Row="0" Content="{Binding CurrentView}" />

        <Grid Grid.Row="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="0" Content="친구" Command="{Binding ShowFriendViewCommand}"/>
            <Button Grid.Column="1" Content="대화" Command="{Binding ShowChatViewCommand}"/>
            <Button Grid.Column="2" Content="오픈채팅"/>
            <Button Grid.Column="3" Content="쇼핑"/>
            <Button Grid.Column="4" Content="더보기"/>
        </Grid>
    </Grid>
</Window>
