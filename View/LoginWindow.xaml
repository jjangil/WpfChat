<Window x:Class="WpfChat.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfChat.View"
        mc:Ignorable="d"
       Title="LoginWindow" Height="800" Width="500">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="200">
            <TextBlock Text="WPF Chat" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <TextBox Text="아이디" Margin="0,0,0,10"/>
            <PasswordBox Margin="0,0,0,20"/>
            <Button Content="로그인" Height="40" Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Window>