<Application x:Class="WpfChat.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfChat"
             xmlns:view="clr-namespace:WpfChat.View"
             xmlns:viewmodel="clr-namespace:WpfChat.ViewModel"
             StartupUri="View/LoginWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewmodel:ChatViewModel}">
            <view:ChatView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel:FriendViewModel}">
            <view:FriendView/>
        </DataTemplate>
    </Application.Resources>
</Application>
